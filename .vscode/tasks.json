{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "build:node",
      "problemMatcher": ["$gulp-tsc"],
      "group": "build"
    },
    {
      "label": "build-watch",
      "type": "npm",
      "script": "watch",
      "problemMatcher": {
        "base": "$tsc-watch",
        "background": {
          "beginsPattern": "\\d{1,2}%\\sbuilding",
          "endsPattern": "Hash:\\s[a-f0-9]{20}"
        }
      },
      "isBackground": true,
      "group": "build"
    },
    {
      "type": "npm",
      "script": "watch",
      "runOptions": {
        "runOn": "folderOpen"
      },
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
